.container.mx-auto.max-w-md.mt-8.px-4
  %p.text-3xl.font-bold CREATE A CATEGORY

  .mt-2.border-t-4.border-b-4.border-black.py-8
    = form_for category do |f|
      .form-item
        = f.label :name, "NAME", class: "font-bold text-xl"
        .mt-2
          = f.text_field :name, class: "text-xl border-2 border-black px-2 py-4 w-full md:w-1/2 lg:w-1/2", placeholder: "e.g. work, health, money"

      .mt-4
        = f.submit "ADD", class: "bg-black text-white px-2 py-4 text-xl w-32"